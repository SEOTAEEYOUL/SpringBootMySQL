    <dependency>
      <groupId>io.micrometer</groupId>
      <artifactId>micrometer-registry-prometheus</artifactId>
      <scope>runtime</scope>
    </dependency>

    <!--  for Aurora MySQL -->    
    <dependency>
        <groupId>software.aws.rds</groupId>
        <artifactId>aws-mysql-jdbc</artifactId>
        <version>1.1.10</version>
